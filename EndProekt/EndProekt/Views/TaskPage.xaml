<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EndProekt.Views.TaskPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" Margin="20">
            <Image x:Name="profileImage"></Image>
            <Label Text="Tasks for the day" Font="20" TextColor="Blue" HorizontalTextAlignment="Center"></Label>
            <Label Text="As default you will see the whole list of tasks" TextColor="Black" HorizontalTextAlignment="Center"></Label>
            <Label Text="Button 'Add' will open a special form" TextColor="Black" HorizontalTextAlignment="Center"></Label>
            <Label Text="On special form there are 3 buttons:" TextColor="ForestGreen" HorizontalTextAlignment="Center"></Label>
            <Label Text="Save - Delete - Cancel" TextColor="ForestGreen" HorizontalTextAlignment="Center"></Label>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>