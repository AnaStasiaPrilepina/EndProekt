<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="EndProekt.Views.TaskPage">
    <ContentPage.Content>
        <StackLayout HorizontalOptions="Center" Margin="20">
            <Image x:Name="profileImage"></Image>
            <Label Text="Tasks for the day" Font="30" TextColor="Blue" HorizontalTextAlignment="Center" VerticalOptions="Start"></Label>
            <Label Text="As default you will see the list of tasks." Font="20" TextColor="Black" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand"></Label>
            <Label Text="Button 'Add' will open a special form." Font="20" TextColor="Black" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand"></Label>
            <Label Text="On special form there are 3 buttons: Save - Delete - Cancel" Font="20" TextColor="ForestGreen" HorizontalTextAlignment="Center" VerticalOptions="CenterAndExpand"></Label>
            <Image Source="info.jpg" VerticalOptions="EndAndExpand"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>